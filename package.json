{
  "name": "@kbox-labs/react-echarts",
  "version": "2.0.0",
  "description": "A React component for the ECharts library",
  "productName": "React ECharts",
  "author": "Hugo Corta <corta.hugo@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "require": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/kbox-labs/react-echarts"
  },
